<ResourceDictionary
    x:Class="LucasAlias.NINA.NinaPP.Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary">
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <DataTemplate x:Key="NINA++ - You gotta go fast!_Options">
        <StackPanel Grid.IsSharedSizeScope="True" Orientation="Vertical">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="NINA > Image > ImageAnalysis > BayerFilter16bpp" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding NINA_Image_ImageAnalysis_BayerFilter16bpp}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>
            <Grid Visibility="{Binding NINA_Image_ImageAnalysis_BayerFilter16bpp, Converter={StaticResource BooleanToVisibilityConverter }}" Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINA_Image_ImageAnalysis_BayerFilter16bpp_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="↳ Multithreaded" FontStyle="Italic" VerticalAlignment="Center">
                    <TextBlock.LayoutTransform>
                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>
                <CheckBox IsChecked="{Binding NINA_Image_ImageAnalysis_BayerFilter16bpp__MT}" IsEnabled="{Binding NINA_Image_ImageAnalysis_BayerFilter16bpp}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                    </CheckBox.LayoutTransform>
                </CheckBox>
            </Grid>
            <Grid Visibility="{Binding NINA_Image_ImageAnalysis_BayerFilter16bpp, Converter={StaticResource BooleanToVisibilityConverter }}" Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINA_Image_ImageAnalysis_BayerFilter16bpp_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="↳ OpenCL" FontStyle="Italic" VerticalAlignment="Center">
                    <TextBlock.LayoutTransform>
                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>
                <ComboBox ItemsSource="{Binding OpenCLAvailableGpus}" SelectedItem="{Binding NINA_Image_ImageAnalysis_BayerFilter16bpp__OpCL, Mode=TwoWay}" DisplayMemberPath="Name"  IsEnabled="{Binding NINA_Image_ImageAnalysis_BayerFilter16bpp}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left">
                    <ComboBox.LayoutTransform>
                        <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                    </ComboBox.LayoutTransform>
                </ComboBox>
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="NINA > Image > ImageAnalysis > ColorRemappingGeneral" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding NINA_Image_ImageAnalysis_ColorRemappingGeneral}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="NINA > Image > ImageAnalysis > FastGaussianBlur" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding NINA_Image_ImageAnalysis_FastGaussianBlur}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="NINA > Image > ImageAnalysis > StarDetection" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding NINA_Image_ImageAnalysis_StarDetection}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>



            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > Filters > BinaryDilation3x3" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_BinaryDilation3x3}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > Filters > CannyEdgeDetector" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_CannyEdgeDetector}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > Filters > Convolution" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_Convolution}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>
            <Grid Visibility="{Binding Accord_Imaging_Filters_Convolution, Converter={StaticResource BooleanToVisibilityConverter }}" Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="↳ Multithreaded" FontStyle="Italic" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock.LayoutTransform>
                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_Convolution__MT}" IsEnabled="{Binding Accord_Imaging_Filters_Convolution}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                    </CheckBox.LayoutTransform>
                </CheckBox>
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > Filters > NoBlurCannyEdgeDetector" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_NoBlurCannyEdgeDetector}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > Filters > ResizeBicubic" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_ResizeBicubic}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>
            <Grid Visibility="{Binding Accord_Imaging_Filters_ResizeBicubic, Converter={StaticResource BooleanToVisibilityConverter }}" Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Accord_Imaging_Filters_ResizeBicubic_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="↳ Multithreaded" FontStyle="Italic" VerticalAlignment="Center">
                    <TextBlock.LayoutTransform>
                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_ResizeBicubic__MT}" IsEnabled="{Binding Accord_Imaging_Filters_ResizeBicubic}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                    </CheckBox.LayoutTransform>
                </CheckBox>
            </Grid>
            <Grid Visibility="{Binding Accord_Imaging_Filters_ResizeBicubic, Converter={StaticResource BooleanToVisibilityConverter }}" Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Accord_Imaging_Filters_ResizeBicubic_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="↳ OpenCL" FontStyle="Italic" VerticalAlignment="Center">
                    <TextBlock.LayoutTransform>
                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>
                <ComboBox ItemsSource="{Binding OpenCLAvailableGpus}" SelectedItem="{Binding Accord_Imaging_Filters_ResizeBicubic__OpCL, Mode=TwoWay}" DisplayMemberPath="Name"  IsEnabled="{Binding Accord_Imaging_Filters_ResizeBicubic}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left">
                    <ComboBox.LayoutTransform>
                        <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                    </ComboBox.LayoutTransform>
                </ComboBox>
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > Filters > SISThreshold" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_SISThreshold}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>


            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > BlobCounter" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_BlobCounter}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > BlobCounterBase" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_BlobCounterBase}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>
            
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>