<ResourceDictionary
    x:Class="LucasAlias.NINA.NinaPP.Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary">
    <DataTemplate x:Key="NINA++ - You gotta go fast!_Options">
        <StackPanel Grid.IsSharedSizeScope="True" Orientation="Vertical">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="NINA > Image > ImageAnalysis > BayerFilter16bpp" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding NINA_Image_ImageAnalysis_BayerFilter16bpp}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="NINA > Image > ImageAnalysis > ColorRemappingGeneral" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding NINA_Image_ImageAnalysis_ColorRemappingGeneral}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="NINA > Image > ImageAnalysis > FastGaussianBlur" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding NINA_Image_ImageAnalysis_FastGaussianBlur}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="NINA > Image > ImageAnalysis > StarDetection" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding NINA_Image_ImageAnalysis_StarDetection}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>



            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > Filters > BinaryDilation3x3" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_BinaryDilation3x3}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > Filters > CannyEdgeDetector" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_CannyEdgeDetector}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > Filters > Convolution" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_Convolution}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > Filters > NoBlurCannyEdgeDetector" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_NoBlurCannyEdgeDetector}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > Filters > ResizeBicubic" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_ResizeBicubic}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > Filters > SISThreshold" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_Filters_SISThreshold}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>


            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > BlobCounter" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_BlobCounter}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>

            <Grid Margin="0,7,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="NINAAccord_Labels" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Accord > Imaging > BlobCounterBase" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding Accord_Imaging_BlobCounterBase}" Grid.Column="1" Margin="7,0,0,0" HorizontalAlignment="Left" />
            </Grid>
            
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>